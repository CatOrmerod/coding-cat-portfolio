<!--portfolio gallery-->
<div class="container">
    <div class="row" id="projects">
        {{#each projects as |project| }}
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h3>{{format_text projectTitle}}</h3>
                </div>
                <div class="card-body">
                    {{!-- <img src={{projectPic}} alt="Man frustrated" style="width:100%"> --}}
                    <div>{{{projectPic}}}</div>
                    <p>{{projectRole}}</p>
                    <button type="button" class="modalButton" data-toggle="modal" data-target="#myModal"
                        data-id="{{id}}">See
                        More</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>