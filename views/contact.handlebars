<div class="card">
    <div class="card-header">
        <h5>Contact Me!</h5>
    </div>
    <div class="card-body">
        <form class="form contact-form">
            <div class="form-group">
                <label for="name-contact">Name:</label>
                <input class="form-input" type="text" id="name-contact" />
            </div>
            <div class="form-group">
                <label for="email-contact">Email:</label>
                <input class="form-input" type="text" id="email-contact" />
            </div>
            <div class="form-group">
                <label for="comment-contact">Comment:</label>
                <input class="form-input" type="text" id="comment-contact" />
            </div>
            <div class="form-group">
                <button class="btn" type="submit">Contact Me</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/contact.js"></script>