<form class="row g-3 add-project-form" id="add-project-form">
  <div class="col-md-6">
    <label for="project-title" class="form-label">Project Title</label>
    <input type="text" class="form-control" id="project-title">
  </div>
  <div class="col-md-6">
    <label for="project-role" class="form-label">Project Role</label>
    <select id="project-role" class="form-select" id="project-role">
      <option selected>Sole Author</option>
      <option>Group Project</option>
    </select>
  </div>
  <div class="col-12">
    <label for="project-description" class="form-label">Project Description</label>
    <input type="text" class="form-control" id="project-description">
  </div>
  <div class="col-12">
    <label for="project-tools" class="form-label">Tools and Technologies used</label>
    <input type="text" class="form-control" id="project-tools" >
  </div>
  <div class="col-md-6">
    <label for="project-repo" class="form-label">Project Repo</label>
    <input type="text" class="form-control" id="project-repo">
  </div>
  <div class="col-md-6">
    <label for="project-url" class="form-label">Project URL</label>
    <input type="text" class="form-control" id="project-url">
  </div>
  <div class="col-md-6">
    <label for="project-pic" class="form-label">Project Pic</label>
    <input type="text" class="form-control" id="project-pic">
  </div>
  <div class="col-md-6">
    <label for="project-screenshot" class="form-label">Screenshot</label>
    <input type="text" class="form-control" id="project-screenshot">
  </div>
  <div class="col-12">
    <button type="submit" class="btn">Add Project</button>
  </div>
</form>

{{#if projects.length}}
<div class="card projects-list">
  <div class="card-header">
    <h5>Projects:</h5>
  </div>
  <div class="card-body">
    {{#each projects as |project|}}
    <h6><a href="/profile/update/{{project.id}}" class="update">
        <div class="card-item">
          {{format_text project.projectTitle}}
        </div>
      </a></h6>
    {{/each}}
  </div>
</div>
{{/if}}


<script src="/js/addproject.js"></script>